def matrixToVector(A):
    B=np.hstack(A);
    return B
    
def vectorsToIMatrix(X,):
    n=X.length;
    imageMatrix=[];
    for i in range (n):
        imageMatrix.append=[matrixToVector(X[i])];
    return imageMatrix
